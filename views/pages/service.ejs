<!-- views/pages/service -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <% include ../partials/head %>
  </head>

  <body class="container">

    <header>
      <% include ../partials/header %>
    </header>

    <main>
      <div class="row">

        <% if (failMessage.length > 0) { %>
          <div class="alert alert-danger"><%= failMessage %></div>
        <% } %>

        <% if (successMessage.length > 0) { %>
          <div class="alert alert-success"><%= successMessage %></div>
        <% } %>

        <div class="jumbotron">
          <table class="table">
            <tr><th><%= service.ServiceName %></th><th>Service Details</th></tr>
            <tr><td>Service Type</td><td><%= service.ServiceType %></td></tr>
            <tr><td>Description</td><td><%= service.ServiceDescription %></td></tr>
            <tr><td>Price</td><td>$ <%= service.ServicePrice %></td></tr>
            <tr><td>Fee</td><td>$ <%= service.ServiceFee %></td></tr>
            <tr><td>Total</td><td>$ <%= service.TotalPrice %></td></tr>
          </table>

          <% if (hasUser) { %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#purchaseModal">Purchase</button>

            <!-- MODAL -->
            <div class="modal fade" id="purchaseModal" role="dialog">
              <div class="modal-dialog">
                <div class="modal-content">
                  <form class="form-horizontal" action="/service" method="post">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Purchase Service</h4>
                    </div>
                    <div class="modal-body">
                      <!-- MODAL BODY START -->

                      <div class="form-group">
                        <label class="control-label col-sm-3">First Name</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" value="<%= firstName %>" name="firstName" id="textboxFirstName" />
                        </div>
                      </div>

                      <br />

                      <div class="form-group">
                        <label class="control-label col-sm-3">Last Name</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" value="<%= lastName %>" name="lastName" id="textboxLastName" />
                        </div>
                      </div>

                      <br />

                      <div class="form-group">
                        <label class="control-label col-sm-3">Email</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" value="<%= email %>" name="email" id="textboxEmail" />
                        </div>
                      </div>

                      <br />

                      <div class="form-group">
                        <label class="control-label col-sm-3">Credit Card #</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" name="creditCard" />
                        </div>
                      </div>

                      <br />

                      <div class="form-group">
                        <label class="control-label col-sm-3">Exp. Date</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" name="expDate" />
                        </div>
                      </div>

                      <br />

                      <div class="form-group">
                        <label class="control-label col-sm-3">CVC Code</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" name="cvcCode" />
                        </div>
                      </div>

                      <br />

                      <div class="form-group">
                        <label class="control-label col-sm-3">Zip Code</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" name="zipCode" />
                        </div>
                      </div>

                      <!-- MODAL BODY END -->
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary">Purchase</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          <% } else { %>
            <strong>Login to puchase a service.</strong>
          <% } %>


        </div>
      </div>
    </main>

    <footer>
      <% include ../partials/footer %>
    </footer>

  </body>

</html>
