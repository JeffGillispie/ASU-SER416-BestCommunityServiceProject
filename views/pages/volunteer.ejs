<!-- views/pages/volunteer -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <% include ../partials/head %>
  </head>

  <body class="container">

    <header>
      <% include ../partials/header %>
    </header>

    <main>
      <h3>Volunteer</h3>
      <div class="container">

        <% if (failMessage.length > 0) { %>
          <div class="alert alert-danger"><%= failMessage %></div>
        <% } %>

        <% if (successMessage.length > 0) { %>
          <div class="alert alert-success"><%= successMessage %></div>
        <% } %>

        <% if (hasUser) { %>
          <strong>Interested in volunteering? Apply now!</strong>
          <br /><br />
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#applyModal">Apply to Volunteer</button>

          <!-- MODAL -->
          <div class="modal fade" id="applyModal" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <form class="form-horizontal" action="/volunteer" method="post">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Volunteer Application</h4>
                  </div>
                  <div class="modal-body">
                    <!-- MODAL BODY START -->
                      <div class="form-group">
                        <label class="control-label col-sm-3">Service Name</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" name="serviceName" placeholder="Service Name" />
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-sm-3">Service Type</label>
                        <div class="col-sm-9">
                          <select class="form-control" name="serviceType">
                            <option>Event</option>
                            <option>Class</option>
                            <option>External</option>
                            <option>Catering</option>
                            <option>Rental</option>
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-sm-3">Service Price</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" name="servicePrice" placeholder="Service Price" />
                        </div>
                      </div>

                      <label class="control-label">Service Description</label>
                      <textarea class="form-control" name="serviceDescription" rows="4"></textarea>


                    <!-- MODAL BODY END -->
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% } else { %>
          <strong>Login to volunteer.</string>
        <% } %>

      </div>

      <hr />
      <strong>Thanks to all our wonderful volunteers!</strong>
      <ul>
        <% volunteers.forEach(function(volunteer) { %>
          <li><%= volunteer.FirstName %>&nbsp;<%= volunteer.LastName %></li>
        <% }); %>
      </ul>
    </main>

    <footer>
      <% include ../partials/footer %>
    </footer>

  </body>

</html>
